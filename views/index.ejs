<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Posts</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <%- include('partials/navbar') %>

        <div class="bg-gray-900 min-h-screen py-12 px-4">

            <div class="max-w-7xl mx-auto">
                <h2 class="text-3xl font-bold text-white mb-8 text-center">All Posts</h2>

                <% if (posts.length> 0) { %>
                    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
                        <% posts.forEach(function(post) { %>
                            <div
                                class="bg-gray-800 p-6 rounded-xl shadow-md hover:shadow-lg transition-all duration-200">
                                <p class="text-gray-300">
                                    <%= post.content %>
                                </p>
                                <p class="text-sm text-gray-500 mt-2">
                                    <%= new Date(post.createdAt).toLocaleString() %>
                                </p>
                                <div class="flex items-center gap-4 mt-3">
                                    <p class="text-gray-300 text-sm">
                                        <%= post.likes.length %> Likes
                                    </p>
                                    <% if (user && user.userid) { %>
                                        <a href="/like2/<%= post._id %>"
                                            class="text-teal-500 hover:text-teal-600 font-semibold text-sm">
                                            <%= post.likes.map(String).includes(String(user.userid)) ? "Unlike" : "Like"
                                                %>
                                        </a>
                                        <% } %>
                                            <a href="/edit/<%= post._id %>"
                                                class="text-teal-500 hover:text-teal-600 font-semibold text-sm">Edit</a>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                    <% } else { %>
                        <p class="text-gray-400 text-center text-lg">You haven't created any posts yet.</p>
                        <% } %>

            </div>
        </div>
</body>

</html>